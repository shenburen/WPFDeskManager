<Window x:Class="WPFDeskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDeskManager"
        mc:Ignorable="d"
        Title="快捷方式拖入" Height="450" Width="800" 
        AllowDrop="True" DragEnter="Window_DragEnter" Drop="Window_Drop">
    
    <Grid Background="#F5F5F5">
        <ListBox x:Name="ShortcutList" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Image Width="32" Height="32" Source="{Binding Icon}" Margin="5"/>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding TargetPath}" FontSize="12" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding Description}" FontStyle="Italic" FontSize="11" Foreground="Gray"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
