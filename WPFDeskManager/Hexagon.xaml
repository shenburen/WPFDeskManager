<Window x:Class="WPFDeskManager.Hexagon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDeskManager"
        mc:Ignorable="d"
        Title="六边形" Height="106" Width="106" ShowInTaskbar="False"
        AllowDrop="True" DragEnter="Window_DragEnter" Drop="Window_Drop"
        Topmost="True" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Grid>
        <Path x:Name="HexagonPath" Fill="LightBlue" Stroke="DarkBlue" StrokeThickness="2"
              MouseLeftButtonDown="Hexagon_MouseLeftButtonDown"/>
        <Image x:Name="Icon" Width="48" Height="48" IsHitTestVisible="False"/>
    </Grid>
</Window>
